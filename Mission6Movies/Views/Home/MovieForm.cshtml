@{
    ViewData["Title"] = "Movie Form";
}

@model MovieApplication

<!-- Form to enter movies into the collection -->

<h2>Movie Form</h2>

<form method="post">
    
    <!--Category of movie dropdown (required)-->
    <label asp-for="Category">Category:</label>
    <select asp-for="Category" required>
        <option value="Action/Adventure">Action/Adventure</option>
        <option value="Comedy">Comedy</option>
        <option value="Drama">Drama</option>
        <option value="Family">Family</option>
        <option value="Horror/Suspense">Horror/Suspense</option>
        <option value="Miscellaneous">Miscellaneous</option>
        <option value="Television">Television</option>
        <option value="VHS">VHS</option>
    </select>
    <br/><br/>
    
    <!-- Title of the movie label and input (required)-->
    <label asp-for="Title">Title:</label>
    <input asp-for="Title" required/>
    <br/><br/>
    
    <!-- Year of the movie label and input (required) -->
    <label asp-for="Year">Year:</label>
    <input asp-for="Year" required/>
    <br/><br/>
    
    <!-- Director of the movie label and input (required)-->
    <label asp-for="Director">Director:</label>
    <input asp-for="Director" required/>
    <br/><br/>
    
    <!-- Rating of the movie label and dropdown (required)-->
    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating" required>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br/><br/>

    <!-- Edited movie field with yes/no (true/false) dropdown option (not required) -->
    <label asp-for="Edited">Edited:</label>
    <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br/><br/>
    
    <!-- Who the movie was lent to label and input (not required) -->
    <label asp-for="LentTo">Lent To:</label>
    <input asp-for="LentTo"/>
    <br/><br/>
    
    <!-- Movie notes label and text area input (not required), has a minimum of 25 characters -->
    <label asp-for="Notes">Notes:</label>
    <textarea asp-for="Notes" maxlength="25"></textarea>
    <br/><br/>
    
    <button type="submit">Submit Movie</button>
    
</form>







